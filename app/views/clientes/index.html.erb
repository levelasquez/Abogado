<div class="container">
  <h1>Lista de Clientes</h1>
  <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= flash[:notice] %>
    </div>
  <% end %>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Cédula</th>
        <th>Teléfono</th>
        <th>Correo</th>
        <th>Dirección</th>
        <th colspan="3">Opciones</th>
      </tr>
    </thead>

    <tbody>
      <%= link_to 'Agregar Cliente', new_cliente_path, class: "btn btn-success pull-right" %><br>
      <% @clientes.each do |cliente| %>
        <tr>
          <td><%= cliente.nombre %></td>
          <td><%= cliente.apellido %></td>
          <td><%= cliente.cedula %></td>
          <td><%= cliente.telefono %></td>
          <td><%= cliente.correo %></td>
          <td><%= cliente.direccion %></td>
          <td><%= link_to 'Editar', edit_cliente_path(cliente), class: "btn btn-warning" %></td>
          <td><%= link_to 'Eliminar', cliente, class: "btn btn-danger", method: :delete, data: { confirm: 'Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>