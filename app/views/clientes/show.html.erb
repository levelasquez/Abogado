<div class="container">
  <div class="row">
    <h1 class="text-center">Cliente</h1>
    <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= flash[:notice] %>
        </div>
      <% end %>
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-condensed">
          <thead>
            <tr class="info">
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Cédula</th>
              <th>Teléfono</th>
              <th>Correo</th>
              <th>Dirección</th>
              <th colspan="2">Opciones</th>
            </tr>
          </thead>
      
          <tbody>
              <tr>
                <td><%= @cliente.nombre %></td>
                <td><%= @cliente.apellido %></td>
                <td><%= @cliente.cedula %></td>
                <td><%= @cliente.telefono %></td>
                <td><%= @cliente.correo %></td>
                <td><%= @cliente.direccion %></td>
                <td><%= link_to '<span class="glyphicon glyphicon-pencil"></span> Editar'.html_safe, edit_cliente_path(@cliente), class: "col-xs-12 btn btn-warning" %></td>
                <td><%= link_to '<span class="glyphicon glyphicon-trash"></span> Eliminar'.html_safe, @cliente, class: "col-xs-12 btn btn-danger", method: :delete, data: { confirm: 'Estás seguro?' } %></td>
              </tr>
          </tbody>
        </table>
    </div>
  </div>
  <div class="row">
    <h1 class="text-center">Expedientes</h1>
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-condensed">
        <thead>
          <tr class="info">
            <th>Expediente</th>
            <th>Area</th>
            <th>Descripcion</th>
            <th>Victima</th>
            <th>Estatus</th>
            <th colspan="3">Opciones</th>
          </tr>
        </thead>
      
        <tbody>
          <% @cliente.expedientes.each do |expediente| %>
            <tr>
              <td><%= expediente.expediente %></td>
              <td><%= expediente.area %></td>
              <td><%= expediente.descripcion %></td>
              <td><%= expediente.victima %></td>
              <td><% if expediente.status == 1 %>
                      <%= "Abierto" %>
                    <% else %>
                      <%= "Cerrado" %>
                  <% end %></td>
              <td><%= link_to '<span class="glyphicon glyphicon-eye-open"></span> Ver'.html_safe, cliente_expediente_path(@cliente, expediente), class: "col-xs-12 btn btn-info"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <%= link_to '<span class="glyphicon glyphicon-list-alt"></span> Nuevo Expediente'.html_safe, new_cliente_expediente_path(@cliente, @expediente), class: "col-xs-offset-4 col-xs-2 btn btn-success" %>
    <%= link_to '<span class="glyphicon glyphicon-arrow-left"></span> Regresar'.html_safe, clientes_path, class: "col-xs-offset-1 col-xs-1 btn btn-info"%>
  </div>
</div>