<center><h1>Cliente</h1></center>
<% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= flash[:notice] %>
    </div>
  <% end %>
<table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Cédula</th>
        <th>Teléfono</th>
        <th>Correo</th>
        <th>Dirección</th>
        <th colspan="2">Opciones</th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td><%= @cliente.nombre %></td>
          <td><%= @cliente.apellido %></td>
          <td><%= @cliente.cedula %></td>
          <td><%= @cliente.telefono %></td>
          <td><%= @cliente.correo %></td>
          <td><%= @cliente.direccion %></td>
          <td><%= link_to 'Editar', edit_cliente_path(@cliente), class: "btn btn-warning" %></td>
          <td><%= link_to 'Regresar', clientes_path, class: "btn btn-info"%></td>
        </tr>
    </tbody>
  </table>

<div class="field">
  <center><h1>Expedientes</h1></center>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Expediente</th>
        <th>Area</th>
        <th>Descripcion</th>
        <th>Victima</th>
        <th>Estatus</th>
        <th colspan="3">Opciones</th>
      </tr>
    </thead>

    <tbody>
      <div>
        <%= link_to 'Agregar Nuevo', new_cliente_expediente_path(@cliente, @expediente), class: "btn btn-success pull-right" %>
      </div>
      <% @cliente.expedientes.each do |expediente| %>
        <tr>
          <td><%= expediente.expediente %></td>
          <td><%= expediente.area %></td>
          <td><%= expediente.descripcion %></td>
          <td><%= expediente.victima %></td>
          <td><% if expediente.status == 1 %>
                  <%= "Abierto" %>
                <% else %>
                  <%= "Cerrado" %>
              <% end %></td>
          <td><%= link_to "Editar", edit_cliente_expediente_path(@cliente, expediente), class: "btn btn-warning" %></td>
          <td><%= link_to "Eliminar", cliente_expediente_path(@cliente, expediente), class: "btn btn-danger", method: :delete, data: {confirm: "Estas seguro?"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>