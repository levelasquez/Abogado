<div class="container">
  <div class="row">
    <h1 class="text-center">Lista de Abogados</h1>
    <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= flash[:notice] %>
      </div>
    <% end %>
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-condensed">
        <thead>
          <tr class="info">
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Ipsa</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Cédula</th>
            <th colspan="2">Opciones</th>
          </tr>
        </thead>
          
        <tbody>
          <% @abogado_ps.each do |abogado_p| %>
            <tr>
              <td><%= abogado_p.nombre %></td>
              <td><%= abogado_p.apellido %></td>
              <td><%= abogado_p.ipsa %></td>
              <td><%= abogado_p.telefono %></td>
              <td><%= abogado_p.direccion %></td>
              <td><%= abogado_p.cedula %></td>
              <td><%= link_to '<span class="glyphicon glyphicon-pencil"></span> Editar'.html_safe, edit_abogado_p_path(abogado_p), class: "col-xs-12 btn btn-warning" %></td>
              <td><%= link_to '<span class="glyphicon glyphicon-trash"></span> Eliminar'.html_safe, abogado_p, class: "col-xs-12 btn btn-danger", method: :delete, data: { confirm: 'Estás seguro?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <%= link_to '<span class="glyphicon glyphicon-user"></span> Nuevo Abogado'.html_safe, new_abogado_p_path, class: "col-xs-offset-5 col-xs-2 btn btn-success" %>
  </div>
</div>