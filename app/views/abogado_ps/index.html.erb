<div class="container">
  <h1>Lista de Abogados Propios</h1>
  <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= flash[:notice] %>
    </div>
  <% end %>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Ipsa</th>
          <th>Teléfono</th>
          <th>Dirección</th>
          <th>Cédula</th>
          <th colspan="3">Opciones</th>
        </tr>
      </thead>

      <tbody>
        <%= link_to 'Agregar Nuevo', new_abogado_p_path, class: "btn btn-success pull-right" %>
        <br>
        <% @abogado_ps.each do |abogado_p| %>
          <tr>
            <td><%= abogado_p.nombre %></td>
            <td><%= abogado_p.apellido %></td>
            <td><%= abogado_p.ipsa %></td>
            <td><%= abogado_p.telefono %></td>
            <td><%= abogado_p.direccion %></td>
            <td><%= abogado_p.cedula %></td>
            <td><%= link_to 'Editar', edit_abogado_p_path(abogado_p), class: "btn btn-warning" %></td>
            <td><%= link_to 'Eliminar', abogado_p, class: "btn btn-danger", method: :delete, data: { confirm: 'Estás seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>