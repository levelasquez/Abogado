<div class="container">
  <h1>Lista de Tribunales</h1>
  <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= flash[:notice] %>
    </div>
  <% end %>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Area</th>
        <th>Instancia</th>
        <th>Tipo</th>
        <th>Juez/a</th>
        <th>Dirección</th>
        <th>Teléfono</th>
        <th colspan="3">Opciones</th>
      </tr>
    </thead>

    <tbody>
      <%= link_to 'Agregar Tribunal', new_tribunal_path, class: "btn btn-success pull-right" %><br>
      <% @tribunals.each do |tribunal| %>
        <tr>
          <td><%= tribunal.area %></td>
          <td><%= tribunal.instancia %></td>
          <td><%= tribunal.tipo %></td>
          <td><%= tribunal.juez %></td>
          <td><%= tribunal.direccion %></td>
          <td><%= tribunal.telefono %></td>
          <td><%= link_to 'Editar', edit_tribunal_path(tribunal), class: "btn btn-warning" %></td>
          <td><%= link_to 'Eliminar', tribunal, class: "btn btn-danger", method: :delete, data: { confirm: 'Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>