<%= form_for([@cliente, @expediente]) do |f| %>
  <% if @expediente.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expediente.errors.count, "errore") %> antes de guardar:</h2>

      <ul>
      <% @expediente.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :expediente, class: "col-sm-2 control-label" %>
    <%= f.text_field :expediente, class: "col-sm-10 form-contol" %><br>
  </div>
  <div class="form-group">
    <%= f.label :area, class: "col-sm-2 control-label" %>
    <%= f.select :area, options_for_select([["Administrativo"], ["Agrario"], ["Civil"], ["Contensioso"], ["Laboral"], ["Lopnna"], ["Mercantil"], ["Penal"]]), class: "col-sm-10 form-contol" %><br>
  </div>
  <div class="form-group">
    <%= f.label :descripcion, class: "col-sm-2 control-label" %>
    <%= f.text_area :descripcion, class: "col-sm-10 form-contol" %><br>
  </div>
  <div class="form-group">
    <%= f.label :victima, class: "col-sm-2 control-label" %>
    <%= f.text_field :victima, class: "col-sm-10 form-contol" %><br>
  </div>
    <%= f.hidden_field :imputado, :value => @cliente.nombre + " " + @cliente.apellido %>
  <div class="form-group">
    <%= f.label :status, class: "col-sm-2 control-label" %>
    <%= f.select :status, options_for_select([["Abierto",1], ["Cerrado",2]]) ,class: "col-sm-10 form-contol" %><br>
  </div>
  <div class="form-group">
    <%= f.submit "Aceptar", class: "col-sm-offset-2 col-sm-10 btn btn-success" %>
    <%= link_to 'Cancelar', @cliente, class: "col-sm-offset-2 col-sm-10 btn btn-info" %>
  </div>
<% end %>
